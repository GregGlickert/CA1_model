{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$COMPONENTS_DIR": "$BASE_DIR/biophys_components"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 300.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -70.0
  },
  "inputs": {
    "se_voltage_clamp": {
      "input_type": "voltage_clamp",
      "module": "SEClamp",
      "node_set": "all",
      "gids": [
        31260
      ],
      "amps": [
        [
          -70,
          -70,
          -70
        ]
      ],
      "durations": [
        [
          300,
          300,
          300
        ]
      ],
      "rs": [
        0.01
      ]
    },
    "current_clamp": {
      "input_type": "current_clamp",
      "module": "IClamp",
      "node_set": "all",
      "gids": [
        13,
        5,
        31259
      ],
      "amp": 0.5,
      "delay": 200.0,
      "duration": 7.0
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "v_report": {
      "variable_name": "v",
      "cells": [31260],
      "module": "membrane_report",
      "sections": "soma"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}