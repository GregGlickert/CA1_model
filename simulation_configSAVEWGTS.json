{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$COMPONENTS_DIR": "$BASE_DIR/biophys_components"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 300.0,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -70.0
  },
  "inputs": {
    "current_clamp": {
      "input_type": "current_clamp",
      "module": "IClamp",
      "node_set": "all",
      "gids": [
        0,
        2,
        3,
        4,
        5
      ],
      "amp": 0.9,
      "delay": 200.0,
      "duration": 30.0
    },
        "se_voltage_clamp": {
      "input_type": "voltage_clamp",
      "module": "SEClamp",
      "node_set": "all",
      "gids": [
        925
      ],
      "amps": [
        [
          -70,
          -70,
          -70
        ]
      ],
      "durations": [
        [
          300.0,
          300.0,
          300.0
        ]
      ],
      "rs": [
        0.01
      ]
    },
    "bg_pn_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/CA1_inputs/bg_pn_spikes.h5",
      "node_set": "bg_pn"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "save_synapses_mod": {
      "module": "save_synapses",
      "network_dir": "updated_conns"
    },
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "syn_report1": {
      "cells": "all",
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "chn2pyr",
      "file_name": "syns_chn2pyr.h5"
    },
    "syn_report2": {
      "cells": "all",
      "variable_name": "W_ampa",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "pyr2int",
      "file_name": "syns_pyr2int_ampa.h5"
    },
    "se_clamp_report": {
      "variable_name": "se",
      "module": "clamp_report"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}